class Solution:
    def reverse(self, x):
        max_int=pow(2,31)-1
        min_int=pow(-2,31)
        if x>0:
            a=int(str(x)[::-1])
            return a if (a<=max_int) else 0
        else:
            y=-(x)
            z=int(str(y)[::-1])
            return -(z) if (-z>=min_int) else 0
